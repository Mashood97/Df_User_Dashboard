<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/josefin_bold"
            android:padding="@dimen/_20sdp"
            android:text="Hello, Mashood"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="@dimen/_20ssp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@mipmap/user_icons_image_round" />


        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageee"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/shopVisitId"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="1"
                android:elevation="@dimen/_2sdp"
                android:fadingEdge="vertical"
                app:cardBackgroundColor="#FFBF00"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/no_of_shop_visited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_20sdp"
                        android:fontFamily="@font/josefin_bold"
                        android:text="20"
                        android:textColor="#FFFAFA"
                        android:textSize="@dimen/_40sdp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/tasks_image_foreground" />

                    <TextView
                        android:id="@+id/headerCard1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/no_of_shop_visited"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/josefin_regular"
                        android:text="Shops Visited"
                        android:textColor="#FFFAFA"
                        android:textSize="@dimen/_18ssp" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/headerCard1"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#FFFAFA" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                        android:fontFamily="@font/josefin_bold"
                        android:text="View"
                        android:textColor="#FFFAFA"
                        android:textSize="@dimen/_18ssp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/shopleftId"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:elevation="@dimen/_2sdp"
                android:fadingEdge="vertical"
                app:cardBackgroundColor="#ff1744"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/to_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_20sdp"
                        android:fontFamily="@font/josefin_bold"
                        android:text="40"
                        android:textColor="#fff"
                        android:textSize="@dimen/_40sdp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/location_image_foreground" />

                    <TextView
                        android:id="@+id/headerCard2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/to_visit"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/josefin_regular"
                        android:text="Shops Left"
                        android:textColor="#fff"
                        android:textSize="@dimen/_18ssp" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/headerCard2"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#FFFAFA" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                        android:fontFamily="@font/josefin_bold"
                        android:text="View"
                        android:textColor="#fff"
                        android:textSize="@dimen/_18ssp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_marginTop="@dimen/_20sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/shopAssignedId"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="1"
                android:elevation="@dimen/_2sdp"
                android:fadingEdge="vertical"
                app:cardBackgroundColor="#0D47A1"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalAttendanceofMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_20sdp"
                        android:fontFamily="@font/josefin_bold"
                        android:text="60"
                        android:textColor="#FFFAFA"
                        android:textSize="@dimen/_40ssp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/attendance_icon_image_foreground" />

                    <TextView
                        android:id="@+id/headerCard3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/totalAttendanceofMonth"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/josefin_regular"
                        android:text="Number of Shops Assigned"
                        android:textColor="#FFFAFA"
                        android:textSize="@dimen/_18sdp" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/headerCard3"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#FFFAFA" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view3"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                        android:fontFamily="@font/josefin_bold"
                        android:text="View"
                        android:textColor="#FFFAFA"
                        android:textSize="@dimen/_18ssp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/horizontalview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear3"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_weight="2"
                    android:elevation="@dimen/_2sdp"
                    android:fadingEdge="vertical"
                    app:cardBackgroundColor="#7E57C2"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_20sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:fontFamily="@font/josefin_regular"
                            android:text="Visit Shop"
                            android:textColor="#FFFAFA"
                            android:textSize="@dimen/_18sdp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="2"
                    android:elevation="@dimen/_2sdp"
                    android:fadingEdge="vertical"
                    app:cardBackgroundColor="#EF5350"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_20sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:fontFamily="@font/josefin_regular"
                            android:text="Visit Shop"
                            android:textColor="#FFFAFA"
                            android:textSize="@dimen/_18sdp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="2"
                    android:elevation="@dimen/_2sdp"
                    android:fadingEdge="vertical"
                    app:cardBackgroundColor="#FFA726"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_20sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:fontFamily="@font/josefin_regular"
                            android:text="Visit Shop"
                            android:textColor="#FFFAFA"
                            android:textSize="@dimen/_18sdp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="2"
                    android:elevation="@dimen/_2sdp"

                    android:fadingEdge="vertical"
                    app:cardBackgroundColor="#388E3C"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_20sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:fontFamily="@font/josefin_regular"
                            android:text="Visit Shop"
                            android:textColor="#FFFAFA"
                            android:textSize="@dimen/_18sdp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/userName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontalview"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/josefin_bold"
            android:padding="@dimen/_20sdp"
            android:text="Hello, Mashood"
            android:textAllCaps="true"
            android:textColor="#FFBF00"
            android:textSize="@dimen/_15ssp"
            android:visibility="invisible" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageee1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@mipmap/user_icons_image_round"
            android:visibility="invisible" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>